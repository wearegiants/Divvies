{% if collection.handle == 'cookies' %}       {% assign bgColor = 'lightblue' %}   {% endif %}
{% if collection.handle == 'chocolate' %}     {% assign bgColor = 'lightgreen' %}  {% endif %}
{% if collection.handle == 'popcorn' %}       {% assign bgColor = 'purple' %}      {% endif %}
{% if collection.handle == 'cupcakes' %}      {% assign bgColor = 'pink' %}        {% endif %}
{% if collection.handle == 'gifts' %}         {% assign bgColor = 'yellow' %}      {% endif %}
{% if collection.handle == 'other-goodies' %} {% assign bgColor = 'orange' %}      {% endif %}

<div class="collection-grid--item fs-cell fs-lg-4 fs-md-2 fs-sm-half equal">
   <a class="coverlink" href="{{ product.url | within: collection }}"></a>
   <span class="btn btn-collection bg-color bg-color-{{ bgColor }}">{{ product.title }}</span>
   <div class="collection-grid--item_thumb">
      {% if product.images.size > 0 %}
      <img src="{{ product.featured_image.src | img_url: 'large' }}" class="img-responsive" alt="{{ product.featured_image.alt | escape }}">
      {% else %}
      <img src="{{ 'type-chocolate-chip.jpg' | asset_url }}" class="img-responsive">
      {% endif %}
   </div>
</div>